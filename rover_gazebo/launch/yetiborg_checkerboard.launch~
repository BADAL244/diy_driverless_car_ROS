<launch>

  <arg name="camera_enabled" default="true" />
  <arg name="laser_enabled" default="false"/>
  <arg name="ur5_enabled" default="false"/>
  <arg name="kinect_enabled" default="false"/>

  <arg name="world_name" default="worlds/empty.world"/>

<!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
<!-- world_name is wrt GAZEBO_RESOURCE_PATH environment variable -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/> 
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- Spawn YetiBorg Model 
  <include file="$(find formulapi_gazebo)/launch/spawn/spawn_yetiborg_conde.launch"> 
   <arg name="camera_enabled" value="$(arg camera_enabled)"/>
   <arg name="laser_enabled" value="$(arg laser_enabled)"/>
   <arg name="ur5_enabled" value="$(arg ur5_enabled)"/>
   <arg name="kinect_enabled" value="$(arg kinect_enabled)"/>
   <arg name="x" default="0.1"/>
   <arg name="y" default="0.3"/>
  </include>
-->
  <!-- Given the published joint states, publish tf for the robot links 
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
-->
  <!-- spawn image viewer for raw camera output -->
    <node pkg="image_view" type="image_view" name="raw_image_view" >
      <remap from="image" to="/cam/camera_/image_raw" />
    </node>

  <!-- spawn image viewer for camera calibration output -->
    <node pkg="image_view" type="image_view" name="corrected_image_view" >
      <remap from="image" to="/camera_calibation/image_corrected" />
    </node>

  <!-- Spawn Checkerboard Model -->
  <include file="$(find formulapi_gazebo)/launch/spawn/spawn_checkerboard.launch"> 
   <arg name="x" default="0.0"/>
   <arg name="y" default="0.0"/>
  </include>

  <!-- Run Camera Calibration Node -->
  <node name="camera_calibration" pkg="camera_calibration" type="camera_calibration.py" output="screen" /> 

</launch>
